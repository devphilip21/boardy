{
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
      "src/**/*", "examples/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}